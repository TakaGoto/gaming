.container-fluid#stream-show
  .row-fluid
    .span9#stream-show
      %object#live_embed_player_flash{:bgcolor => "#000000",
        :data => "http://www.twitch.tv/widgets/live_embed_player.swf?channel=#{@stream.name}",
        :height => "100%",
        :width => "100%",
        :type => "application/x-shockwave-flash"}
        %param{:name => "allowFullScreen", :value => "true"}/
        %param{:name => "allowScriptAccess", :value => "always"}/
        %param{:name => "allowNetworking", :value => "all"}/
        %param{:name => "movie", :value => "http://www.twitch.tv/widgets/live_embed_player.swf"}/
        %param{:name => "flashvars", :value => "hostname=www.twitch.tv&channel=#{@stream.name}&auto_play=true&start_volume={VOLUME}"}/
      .stream-content
        %p
          = @stream_data["channel"]["name"]
          = @stream_data["viewers"]

    .span3#stream-chat
      %iframe#chat_embed{:frameborder => "0",
        :height => "600px",
        :scrolling => "no",
        :src => "http://twitch.tv/chat/embed?channel=#{@stream.name}&amp;popout_chat=true",
        :width => "300px"}

