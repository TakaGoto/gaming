- if user_signed_in? && current_user.email == "tak.yuki@gmail.com"
  .container
    %table.table
      %tr
        %th Name
        %th Email
        %th Stream
      - @users.each do |user|
        %tr
          %th
            = user.name
          %th
            = user.email
          %th
            - if user.stream
              = user.stream.name
            - else
              = link_to "add stream", new_stream_path(user.id)

